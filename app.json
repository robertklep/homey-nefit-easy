{
  "id": "nl.nefit.easy",
  "sdk": 2,
  "version": "2.0.0",
  "compatibility": ">=1.5.0",
  "name": {
    "en": "Nefit Easy",
    "nl": "Nefit Easy"
  },
  "description": {
    "en": "Nefit Easy thermostat",
    "nl": "Nefit Easy thermostaat"
  },
  "author": {
    "name": "Athom B.V."
  },
  "category": "climate",
  "images": {
    "large": "assets/images/large.jpg",
    "small": "assets/images/small.jpg"
  },
  "permissions": [],
  "speech": [],
  "capabilities": {
    "clock_programme": {
      "type": "boolean",
      "title": {
        "en": "Clock Programme",
        "nl": "Klokprogramma"
      },
      "getable": true,
      "setable": true
    },
    "operating_mode": {
      "type": "enum",
      "title": {
        "en": "Operating Mode",
        "nl": "Bedrijfsmodus"
      },
      "values": [
        {
          "id": "hot water",
          "title": {
            "en": "Hot Water",
            "nl": "Warmwater"
          }
        },
        {
          "id": "central heating",
          "title": {
            "en": "Central Heating",
            "nl": "CV"
          }
        },
        {
          "id": "off",
          "title": {
            "en": "Off",
            "nl": "Uit"
          }
        }
      ],
      "getable": true,
      "setable": false
    }
  },
  "drivers": [
    {
      "id": "nefit_easy",
      "class": "thermostat",
      "name": {
        "en": "Nefit Easy",
        "nl": "Nefit Easy"
      },
      "images": {
        "large": "drivers/nefit_easy/assets/images/large.png",
        "small": "drivers/nefit_easy/assets/images/small.png"
      },
      "capabilities": [
        "target_temperature",
        "measure_temperature",
        "clock_programme",
        "operating_mode"
      ],
      "capabilitiesOptions": {
        "target_temperature": {
          "title": {
            "en": "Target temperature",
            "nl": "Ingestelde temperatuur"
          }
        },
        "measure_temperature": {
          "title": {
            "en": "Measured temperature",
            "nl": "Gemeten temperatuur"
          }
        },
        "measure_pressure": {
          "title": {
            "en": "Pressure",
            "nl": "Druk"
          }
        },
        "clock_programme": {
          "title": {
            "en": "Clock Programme",
            "nl": "Klokprogramma"
          }
        },
        "operating_mode": {
          "title": {
            "en": "Operating Mode",
            "nl": "Bedrijfsmodus"
          }
        }
      },
      "mobile": {
        "components": [
          {
            "id": "icon"
          },
          {
            "id": "sensor",
            "capabilities": [
              "measure_temperature",
              "measure_pressure"
            ]
          },
          {
            "id": "thermostat",
            "capabilities": [
              "target_temperature"
            ]
          }
        ]
      },
      "pair": [
        {
          "id": "start"
        },
        {
          "id": "device-added"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "Synchronization",
            "en": "Synchronisatie"
          },
          "children": [
            {
              "id": "syncInterval",
              "type": "number",
              "label": {
                "en": "Interval",
                "nl": "Interval"
              },
              "value": 60,
              "attr": {
                "min": 30,
                "max": 600
              },
              "hint": {
                "en": "How often, in seconds, should Homey ask the Nefit Easy for a status update?",
                "nl": "Hoe vaak, in seconden, moet Homey de Nefit Easy voor een status update vragen?"
              }
            }
          ]
        },
        {
          "type": "group",
          "label": {
            "en": "Authenticatie"
          },
          "children": [
            {
              "id": "serialNumber",
              "type": "label",
              "value": "",
              "label": {
                "en": "Serial Number",
                "nl": "Serienummer"
              }
            },
            {
              "id": "accessKey",
              "type": "label",
              "value": "",
              "label": {
                "en": "Access Key",
                "nl": "Toegangscode"
              }
            },
            {
              "id": "password",
              "type": "password",
              "value" : "",
              "label": {
                "en": "Password",
                "nl": "Wachtwoord"
              },
              "hint": {
                "en": "Use this only when the password for your Nefit Easy has changed.",
                "nl": "Gebruik dit alleen als het wachtwoord van je Nefit Easy veranderd is."
              }
            }
          ]
        }
      ]
    }
  ],
  "flow": {}
}
