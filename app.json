{
  "id": "nl.nefit.easy",
  "sdk": 2,
  "version": "2.0.0",
  "compatibility": ">=1.5.0",
  "name": {
    "en": "Nefit Easy",
    "nl": "Nefit Easy"
  },
  "description": {
    "en": "Nefit Easy thermostat",
    "nl": "Nefit Easy thermostaat"
  },
  "author": {
    "name": "Athom B.V."
  },
  "category": "climate",
  "images": {
    "large": "assets/images/large.jpg",
    "small": "assets/images/small.jpg"
  },
  "permissions": [],
  "speech": [],
  "capabilities": {
    "clock_programme": {
      "type": "boolean",
      "title": {
        "en": "Clock Programme",
        "nl": "Klokprogramma"
      },
      "getable": true,
      "setable": true
    },
    "operating_mode": {
      "type": "enum",
      "title": {
        "en": "Operating Mode",
        "nl": "Bedrijfsmodus"
      },
      "values": [
        {
          "id": "hot_water",
          "title": {
            "en": "Hot Water",
            "nl": "Warmwater"
          }
        },
        {
          "id": "central_heating",
          "title": {
            "en": "Central Heating",
            "nl": "CV"
          }
        },
        {
          "id": "off",
          "title": {
            "en": "Off",
            "nl": "Uit"
          }
        }
      ],
      "getable": true,
      "setable": false
    }
  },
  "drivers": [
    {
      "id": "nefit_easy",
      "name": {
        "en": "Nefit Easy",
        "nl": "Nefit Easy"
      },
      "images": {
        "large": "drivers/nefit_easy/assets/images/large.png",
        "small": "drivers/nefit_easy/assets/images/small.png"
      },
      "class": "thermostat",
      "capabilities": [
        "target_temperature",
        "measure_temperature",
        "clock_programme",
        "operating_mode"
      ],
      "capabilitiesOptions": {
        "target_temperature": {
          "title": {
            "en": "Target temperature",
            "nl": "Ingestelde temperatuur"
          }
        },
        "measure_temperature": {
          "title": {
            "en": "Measured temperature",
            "nl": "Gemeten temperatuur"
          }
        },
        "measure_pressure": {
          "title": {
            "en": "Pressure",
            "nl": "Druk"
          }
        },
        "clock_programme": {
          "title": {
            "en": "Clock Programme",
            "nl": "Klokprogramma"
          }
        },
        "operating_mode": {
          "title": {
            "en": "Operating Mode",
            "nl": "Bedrijfsmodus"
          }
        }
      },
      "mobile": {
        "components": [
          {
            "id": "icon",
            "capabilities": [
              "clock_programme"
            ]
          },
          {
            "id": "sensor",
            "capabilities": [
              "measure_temperature",
              "measure_pressure"
            ]
          },
          {
            "id": "thermostat",
            "capabilities": [
              "target_temperature"
            ]
          }
        ]
      },
      "pair": [
        {
          "id": "start"
        },
        {
          "id": "device-added"
        }
      ]
    }
  ],
  "flow": {}
}
